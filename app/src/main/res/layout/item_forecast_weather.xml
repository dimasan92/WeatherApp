<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cw_item_forecast"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/forecast_offset"
    android:elevation="@dimen/forecast_elevation"
    app:cardBackgroundColor="@color/colorPrimaryTransparent"
    app:cardCornerRadius="@dimen/forecast_corner_radius"
    tools:targetApi="lollipop">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/forecast_offset"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/ForecastTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/forecast_offset" />

        <ImageView
            android:layout_width="@dimen/icon_forecast_weather_size"
            android:layout_height="@dimen/icon_forecast_weather_size"
            android:layout_marginBottom="@dimen/forecast_offset"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_item_forecast"
            android:dividerPadding="@dimen/forecast_offset"
            android:orientation="horizontal"
            android:showDividers="middle">

            <TextView
                android:id="@+id/tv_forecast_day_temp"
                style="@style/ForecastTempStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/forecast_offset"
                android:drawablePadding="@dimen/forecast_offset" />

            <TextView
                android:id="@+id/tv_forecast_night_temp"
                style="@style/ForecastTempStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/forecast_offset"
                android:drawablePadding="@dimen/forecast_offset" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>