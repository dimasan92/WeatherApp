<resources>

    <!--themes-->
    <style name="WeatherAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--styles-->

    <style name="AppBackgroundStyle">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AppBarBackgroundStyle">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AppBarTitleStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/city_name_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppBarSubtitleStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/date_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CurrentTemperatureStyle">
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:textSize">@dimen/current_temp_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DescriptionStyle">
        <item name="android:textColor">@color/colorAzure</item>
        <item name="android:textSize">@dimen/description_size</item>
    </style>

    <style name="ParamStyle">
        <item name="android:textColor">@color/colorAzure</item>
        <item name="android:textSize">@dimen/param_size</item>
    </style>


    <style name="WeatherFragmentTheme" parent="WeatherAppTheme">
        <item name="android:textColor">@color/colorAzure</item>
    </style>

    <style name="CityNameEnter">
        <item name="android:ems">8</item>
        <item name="android:textSize">@dimen/text_little</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MainTemperatureParam">
        <item name="android:textSize">@dimen/text_very_big</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TinyLightText">
        <item name="android:textSize">@dimen/text_tiny</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TinyDarkText">
        <item name="android:textSize">@dimen/text_tiny</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="LittleLightText">
        <item name="android:textSize">@dimen/text_little</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WelcomeBackgroundImage">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="chooseCityItem">
        <item name="android:textSize">@dimen/text_middle</item>
        <item name="android:textColor">@color/colorAzure</item>
        <item name="android:layout_marginTop">@dimen/offset_very_small</item>
        <item name="android:padding">@dimen/offset_very_small</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="SensorDialogTheme" parent="WeatherAppTheme">
        <item name="android:layout_marginTop">@dimen/sensor_dialog_margin_ver</item>
        <item name="android:layout_marginBottom">@dimen/sensor_dialog_margin_ver</item>
        <item name="android:layout_marginLeft">@dimen/sensor_dialog_margin_hor</item>
        <item name="android:layout_marginRight">@dimen/sensor_dialog_margin_hor</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/sensor_dialog_text_size</item>
    </style>

</resources>
